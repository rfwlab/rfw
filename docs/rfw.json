{
  "port": 8080,
  "build": {
    "type": "ssc"
  },
  "plugins": {
    "tailwind": {
      "input": "static/input.css",
      "output": "static/tailwind.css"
    },
    "env": {},
    "pages": {},
    "docs": {},
    "bundler": {},
    "seo": {
      "title": "RFW",
      "pattern": "%s | RFW",
      "meta": {
        "description": "RFW documentation"
      }
    },
    "copy": {
      "files": [
        {
          "from": "examples/components/**/*",
          "to": "build/static/examples/components"
        }
      ]
    }
  }
}
